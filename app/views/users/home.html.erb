<%= form_for :user, url: sign_up_path do |f| %>
    <div class="form-group">
      <%= f.text_field(:name, class: "form-control", placeholder: "Tu nombre") %>
    </div>
    <div class="form-group">
      <%= f.text_field(:email, class: "form-control", placeholder: "Email") %>
    </div>
    <div class="form-group">
      <%= f.password_field(:password, class: "form-control", placeholder: "Contraseña") %>
    </div>
    <div class="form-group">
      <%= f.password_field(:password_confirmation, class: "form-control", placeholder: "Confirmar contraseña") %>
    </div>

    <%= f.submit("Registrarse", class: "btn btn-primary") %>
<% end %>


<%= form_for :sesion, url: sign_in_path do |f| %>
    <div class="form-group">
      <%= f.text_field(:email, class: "form-control", placeholder: "Email") %>
    </div>
    <div class="form-group">
      <%= f.password_field(:password, class: "form-control", placeholder: "Contraseña") %>
    </div>

    <%= f.submit('Iniciar sesion', class: "btn btn-primary") %>
<% end %>
